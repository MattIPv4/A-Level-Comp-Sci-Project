{% extends "app/base.jinja2" %}

{% block title %}Account{% endblock %}

{% block body %}
    {% set this_user = auth.current_user() %}
    {% from "app/macros/field.jinja2" import render_field with context %}

    <div class="container">
        <h1>
            Create new account
        </h1>

        {% with messages = get_flashed_messages() %}
            {% if messages %}
                <div>
                    {% for message in messages %}
                        {{ message }}<br>
                    {% endfor %}
                </div>
            {% endif %}
        {% endwith %}

        <form method="POST" action="{{ request.url }}" accept-charset="UTF-8" role="form">
            {{ form.csrf_token }}

            <div class="row">
                <div class="seven columns">
                    <div class="media">
                        <div class="left">
                            <h1><i class="fas fa-user-tag"></i></h1>
                        </div>
                        <div class="main">
                            {{ render_field(form.username, placeholder="Username") }}
                        </div>
                    </div>
                    <div class="media">
                        <div class="left">
                            <h1><i class="fas fa-key"></i></h1>
                        </div>
                        <div class="main">
                            {{ render_field(form.password, placeholder="Password") }}
                        </div>
                    </div>
                </div>
                <div class="five columns">
                    <div class="media">
                        <div class="left">
                            <h1><i class="fas fa-clipboard-check"></i></h1>
                        </div>
                        <div class="main">
                            {{ render_field(form.auth_level, placeholder="Auth Level") }}
                        </div>
                    </div>
                    <div class="t-center">
                        <button type="submit" name="submit" class="button primary mt-4">
                            <i class="fas fa-lg fa-user-plus"></i> Create
                        </button>
                    </div>
                </div>
            </div>
        </form>
    </div>
{% endblock %}