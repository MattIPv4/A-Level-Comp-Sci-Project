<header class="navbar">
    <div class="container larger">
        <div class="row">
            {% set this_user = auth.current_user() %}
            <a class="item title" href="{{ url_for('index') }}">
                {{ app.name }}
            </a>

            <a class="item" href="{{ url_for('index') }}">Home</a>

            {% if this_user and this_user.auth_level == 1 %}
                {# Student #}
                <span class="dropdown">
                    <a class="droptitle" href="{{ url_for('student.rota') }}">
                        Rota <i class="fas fa-angle-right"></i>
                    </a>
                    <span class="drop">
                        <a class="item" href="{{ url_for('student.rota') }}">Personal Rota</a>
                        <a class="item" href="{{ url_for('student.rota_full') }}">Full Rota</a>
                    </span>
                </span>

                <a class="item" href="{{ url_for('student.unavailability') }}">Unavailability</a>
                <a class="item" href="{{ url_for('student.attendance') }}">Attendance</a>
            {% elif this_user and this_user.auth_level == 2 %}
                {# Staff #}
            {% endif %}

            <span class="right">
                {% if this_user %}
                    {% if this_user.auth_level == 1 %}
                        {% set base = "student" %}
                    {% else %}
                        {% set base = "staff" %}
                    {% endif %}
                    <span class="dropdown">
                        <a class="droptitle" href="{{ url_for(base+'.account') }}">
                            {{ this_user.username }}
                            <span class="label">{{ base }}</span>
                            <i class="fas fa-angle-right"></i>
                        </a>
                        <span class="drop">
                            <a class="item" href="{{ url_for(base+'.account') }}">Account</a>
                            <a class="item" href="{{ url_for('auth.logout') }}">Logout</a>
                        </span>
                    </span>
                {% else %}
                    <a class="item" href="{{ url_for('auth.login') }}">Login</a>
                {% endif %}
            </span>
        </div>
    </div>
</header>
