{% extends "app/base.jinja2" %}

{% block title %}Student Attendance{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="twelve columns">
                <h1 class="mt-4">
                    Student Attendance Overview
                </h1>
            </div>
        </div>
        <div class="row">
            <div class="two-thirds column">
                <h4 class="mb-0">Attendance breakdown</h4>
                {% from "app/macros/table.jinja2" import render_table with context %}
                {{ render_table(["Student", "Attendance", "Punctuality"], attendance_table) }}
            </div>
        </div>
    </div>
{% endblock %}